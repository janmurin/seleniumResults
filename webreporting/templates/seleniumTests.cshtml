@using SeleniumResults.Models
@model SeleniumResults.webreporting.ViewModels.SeleniumTestsViewModel

@{
    Layout = "_Layout.cshtml";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Selenium tests</h1>

<div class="table-responsive bg-white">
    <table class="table table-bordered" id="seleniumTestsDataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>Test Name</th>
            <th>Selenium1</th>
            <th>Selenium2</th>
            <th>Total Failures</th>
            <th>Total Runs</th>
            <th>Failure Rate Last 10 builds</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th>Test Name</th>
            <th>Selenium1</th>
            <th>Selenium2</th>
            <th>Total Failures</th>
            <th>Total Runs</th>
            <th>Failure Rate Last 10 builds</th>
        </tr>
        </tfoot>
        <tbody>
        @foreach (var testStat in Model.TestStatsList)
        {
            <tr>
                <td><a href="testPages/@(testStat.Name).html" target="_blank">@testStat.Name</a></td>
                <td data-order="@testStat.Sel1FailureRate">@testStat.Sel1Stat</td>
                <td data-order="@testStat.Sel2FailureRate">@testStat.Sel2Stat</td>
                <td>@testStat.TotalFailures</td>
                <td>@testStat.TotalRuns</td>
                <td data-order="@testStat.LastXFailureRate">
                    @testStat.LastXFailureRateString
                    <a class="" href="#" data-toggle="modal" data-target="#lastXBuildsModal_@testStat.Name">Detail</a>
                    <div class="modal fade" id="lastXBuildsModal_@testStat.Name" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-xl" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">@testStat.Name last 10 builds</h5>
                                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">Ã—</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    @{
                                        KeyValuePair<int, LastXBuildsStat> valuePair = testStat.LastXBuildsDict.First();
                                    }
                                    <table class="table table-borderless table-sm w-auto">
                                        <tbody>
                                        <tr>
                                            <th scope="row">Failure rate:</th>
                                            <td>@valuePair.Value.FailureRate %</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Total builds:</th>
                                            <td>@valuePair.Value.TotalFailed/@valuePair.Value.TotalBuilds</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                    <table class="table table-bordered modal-datatable" width="100%" cellspacing="0">
                                        <thead>
                                        <tr>
                                            <th>Time</th>
                                            <th>File</th>
                                            <th>Application</th>
                                            <th>Result</th>
                                            <th>BuildNumber</th>
                                        </tr>
                                        </thead>
                                        <tfoot>
                                        <tr>
                                            <th>Time</th>
                                            <th>File</th>
                                            <th>Application</th>
                                            <th>Result</th>
                                            <th>BuildNumber</th>
                                        </tr>
                                        </tfoot>
                                        <tbody>
                                        @foreach (var sr in valuePair.Value.GetOrderedTestRuns())
                                        {
                                            <tr>
                                                <td>@sr.Time</td>
                                                <td>
                                                    <a href="data/@sr.TestRunMetaData.OriginalFileName" target="_blank">@sr.TestRunMetaData.OriginalFileName</a>
                                                </td>
                                                <td>@sr.TestRunMetaData.FlytApplicationType</td>
                                                <td>
                                                    <span class="badge @(sr.IsPassed ? "badge-success" : "badge-danger")">@sr.TestResultType</span>
                                                </td>
                                                <td>@sr.TestRunMetaData.BuildNumber</td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section scripts {
    <script>
    $(document).ready(function () {
        $('#seleniumTestsDataTable').DataTable({
            "order": [[5, "desc"]]
        });
    });
    $('.modal').on('shown.bs.modal', function (e) {
        var id = "#"+e.currentTarget.id + " .modal-datatable";
                
        if (!$.fn.DataTable.isDataTable(id)) {
            $(id).DataTable({
                "order": [[0, "desc"]]
            });
        }
    });
    </script>
}
